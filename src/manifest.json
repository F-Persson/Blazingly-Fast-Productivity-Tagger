{
    "name": "Tagger",
    "description": "Save notes and bookmarks. This software is released under the terms of the MIT license: https://opensource.org/licenses/MIT",
    "version": "0.5.0",
    "manifest_version": 3,
    "author": "Francis P",
    "background": {
        "service_worker": "assets/background.js"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "assets/content.js"
            ]
        }
    ],
    "options_page": "index.html#options"
}