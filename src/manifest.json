{
    "name": "Tagger",
    "description": "Tagger",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "assets/background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "contextMenus",
        "bookmarks",
        "scripting",
        "tabs"
    ],
    "action": {
        "default_popup": "index.html#popup"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "assets/content.js"
            ]
        }
    ],
    "options_page": "index.html#options"
}